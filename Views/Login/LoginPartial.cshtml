@model LoginUser;
<div class="row">
    <form asp-action="Login">
        <div class="form-group mb-2">
            <span asp-validation-for="LoginEmail" class="text-danger col-8"></span>
            <label asp-for="LoginEmail" class="col-8"></label>
            <div class="col-12">
                <input asp-for="LoginEmail" class="form-control">
            </div>
        </div>
        <div class="form-group mb-2">
            <span asp-validation-for="LoginPassword" class="text-danger col-8"></span>
            <label asp-for="LoginPassword" class="col-8"></label>
            <div class="col-12">
                <input asp-for="LoginPassword" class="form-control">
            </div>
        </div>
        <div class="form-group">
            <input type="submit" value="Login" class="col-4 offset-8 btn btn-outline-primary">
        </div>
    </form>
</div>